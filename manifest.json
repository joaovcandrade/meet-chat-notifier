{
    "manifest_version": 2,
    "version": "0.0.2",
    "name": "Meet Chat Notifier",
    "description": "Meet Chat Notifier",
    "author": "Jo√£o Vitor da Costa Andrade",
    "permissions": ["notifications", "tabs"],
    "icons": {
      "16": "icon16.png",
      "24": "icon24.png",
      "36": "icon36.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "browser_action": {
      "default_icon": {
        "15": "icon16.png",
        "24": "icon24.png",
        "36": "icon36.png",
        "48": "icon48.png"
      },
   	 "default_title": "Meet Chat Notifier",
        "default_popup": "index.html"
    },
    "background": {
        "scripts" : ["background.js"]
    },
    "content_scripts": [
        {
          "matches": ["https://meet.google.com/*"],
          "js": ["content.js"]
        }
      ]
    }